<tryton>
    <data>
        <record model="ir.ui.view" id="template_view_form">
            <field name="model">product.template</field>
            <field name="inherit" ref="product.template_view_form"/>
            <field name="name">template_form</field>
        </record>

        <!-- rule -->
        <record model="ir.rule.group" id="rule_group_product_template_sale_shop">
            <field name="name">User in company</field>
            <field name="model"
                search="[('model', '=', 'product.template-sale.shop')]"/>
            <field name="global_p" eval="True"/>
        </record>
        <record model="ir.rule" id="rule_product_template_sale_shop">
            <field name="domain"
                eval="[('shop.company', '=', Eval('user', {}).get('company', None))]"
                pyson="1"/>
            <field name="rule_group" ref="rule_group_product_template_sale_shop"/>
        </record>
    </data>
</tryton>
